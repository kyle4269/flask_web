<!doctype html>
<html>
<head>
    <title>Search Results</title>
    <style>
        body {
            font-family: Arial, sans-serif; /* Improve font */
            margin: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .results-header {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="results-header">
        <h2>Search Results</h2>
    </div>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Camera</th>
                <th>Plate</th>
                <th>Score</th>
                <th>Time</th>
                <th>Event</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            {% for record in results %}
                <tr>
                    <td>{{ record.id }}</td>
                    <td>{{ record.camera_name }}</td>
                    <td>{{ record.plate_number }}</td>
                    <td>{{ record.score }}</td>
                    <td>{{ record.detection_time }}</td>
                    <td>{{ record.frigate_event }}</td>
                    <td>{{ record.has_image }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
